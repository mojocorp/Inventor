#define OneProgram

PROGRAM = ivview

#define LocalLibs ../../samples/widgets/libInventorWidget.a
#define OtherLibs -lGL -lm -lX11 -lXt -lXm

#define ShipProgram

C++FILES = ivview.c++ 
HFILES = ivviewMenus.h 

/* End of generic stuff, start of tricky stuff: */

#ifndef CreatingUserMakefile
TOP_OF_TREE = ../../..
OTHERSOURCE = README 

#ifdef CreatingSgiMakefile

IDBTAGEXTRA = -idb "inventor_eoe.sw.help $(MACH_TAG)"
IDBTAGEOESW = -idb "inventor_eoe.sw.inventor $(MACH_TAG)"
IDBTAGJPN   = -idb "inventor_eoe.sw.japanese $(MACH_TAG)"

default:
install: extraInstall
extraInstall:
	$(INSTALL) -F /usr/share/help/ivview \
		-m 444 $(IDBTAGEXTRA) ivview.about
/* Shell script to avoid TAC calls asking "Where did SceneViewer go?" */
	$(INSTALL) -F /usr/sbin -m 555 $(IDBTAGBIN) SceneViewer
/* Shell script to avoid TAC calls asking "Where did ivquicken go?" */
	$(INSTALL) -F /usr/sbin -m 555 $(IDBTAGBIN) ivquicken

/* Resource file for I18N. */
	$(INSTALL) -F /usr/lib/X11/app-defaults -m 444 $(IDBTAGEOESW) Ivview
/* Japanese Resource File. */
	$(INSTALL) -F /usr/lib/X11/ja_JP.EUC/app-defaults \
				-m 444 $(IDBTAGJPN) -src Ivview.jp Ivview

#endif
#endif

